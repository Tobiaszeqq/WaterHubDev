local Players = game:GetService("Players")

-- Define words to replace and their replacements
local replacements = {
    nigga = "<ni><gg><a>",
    fuck = "<fu><ck>",
}

local function replaceWords(message)
    for targetWord, replacementWord in pairs(replacements) do
        local pattern = "%f[%a]" .. targetWord .. "%f[%A]"
        message = message:gsub(pattern, replacementWord)
    end
    return message
end

local function onPlayerChat(player, message)
    if player == Players.LocalPlayer then
        local modifiedMessage = replaceWords(message)
        print("You said: " .. modifiedMessage) -- Display modified message in the output for testing
    end
end

-- Listen to player's chats locally
Players.LocalPlayer.Chatted:Connect(function(message)
    onPlayerChat(Players.LocalPlayer, message)
end)
