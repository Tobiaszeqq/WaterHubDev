local Players = game:GetService("Players")
local Chat = game:GetService("Chat")
local LocalPlayer = Players.LocalPlayer

-- Define the words to replace and their substitutes
local replacements = {
    nigga = "t",
    fuck = "t",
}

-- Function to replace words in a message
local function replaceWords(message)
    for targetWord, replacementWord in pairs(replacements) do
        local pattern = "%f[%a]" .. targetWord .. "%f[%A]"
        message = message:gsub(pattern, replacementWord)
    end
    return message
end

-- Listen to the local player's chats and modify locally
LocalPlayer.Chatted:Connect(function(originalMessage)
    -- Replace words in the message
    local modifiedMessage = replaceWords(originalMessage)
    
    -- Display the modified message locally
    Chat:Chat(LocalPlayer.Character or LocalPlayer, modifiedMessage, Enum.ChatColor.Blue)
end)
